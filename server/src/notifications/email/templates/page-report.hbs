{{#>layout title="New Page Report" }}
  <h1 style="margin: 0; text-align: center; padding-bottom: 24px;">New Page Report</h1>
  <table width="100%" border="0" cellspacing="0" cellpadding="0" style="width: 100%;">
    <!-- Icon & Info Row -->
    <tr>
      <td align="center" style="padding-bottom: 40px;">
        <table style=" width: 100%;" border="0" cellspacing="0" cellpadding="0" style="text-align: center;">
          <tr>
            <!-- Path Column -->
            <td align="center" style="padding: 12px;">
              <table border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td align="center">
                    <div style="margin: auto;">

                      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
                        <path fill="currentColor"
                          d="M18 15.75q0 2.6-1.825 4.425T11.75 22t-4.425-1.825T5.5 15.75V6.5q0-1.875 1.313-3.187T10 2t3.188 1.313T14.5 6.5v8.75q0 1.15-.8 1.95t-1.95.8t-1.95-.8t-.8-1.95V6h2v9.25q0 .325.213.538t.537.212t.538-.213t.212-.537V6.5q-.025-1.05-.737-1.775T10 4t-1.775.725T7.5 6.5v9.25q-.025 1.775 1.225 3.013T11.75 20q1.75 0 2.975-1.237T16 15.75V6h2z" />
                      </svg>
                    </div>
                  </td>
                </tr>
                <tr>
                  <td style="padding-top: 10px; color: #8f8f8f;">Path</td>
                </tr>
                <tr>
                  <td style="padding-top: 10px; font-weight: bold; font-size: 20px;">{{ slug }}</td>
                </tr>
              </table>
            </td>
            <!-- Date Column -->
            <td align="center" style="padding: 12px;" width="33%">
              <table border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td align="center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
                      <path fill="currentColor"
                        d="M12 14q-.425 0-.712-.288T11 13t.288-.712T12 12t.713.288T13 13t-.288.713T12 14m-4 0q-.425 0-.712-.288T7 13t.288-.712T8 12t.713.288T9 13t-.288.713T8 14m8 0q-.425 0-.712-.288T15 13t.288-.712T16 12t.713.288T17 13t-.288.713T16 14m-4 4q-.425 0-.712-.288T11 17t.288-.712T12 16t.713.288T13 17t-.288.713T12 18m-4 0q-.425 0-.712-.288T7 17t.288-.712T8 16t.713.288T9 17t-.288.713T8 18m8 0q-.425 0-.712-.288T15 17t.288-.712T16 16t.713.288T17 17t-.288.713T16 18M5 22q-.825 0-1.412-.587T3 20V6q0-.825.588-1.412T5 4h1V2h2v2h8V2h2v2h1q.825 0 1.413.588T21 6v14q0 .825-.587 1.413T19 22zm0-2h14V10H5z" />
                    </svg>
                  </td>
                </tr>
                <tr>
                  <td style="padding-top: 10px; color: #8f8f8f;">Date</td>
                </tr>
                <tr>
                  <td style="padding-top: 10px; font-weight: bold; font-size: 20px;">{{ time }}</td>
                </tr>
              </table>
            </td>
            <!-- Amount Column -->
            <td align="center" style="padding: 12px;" width="33%">
              <table border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td align="center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24">
                      <path fill="currentColor"
                        d="M11.025 21v-2.15q-1.325-.3-2.287-1.15t-1.413-2.4l1.85-.75q.375 1.2 1.113 1.825t1.937.625q1.025 0 1.738-.462t.712-1.438q0-.875-.55-1.387t-2.55-1.163q-2.15-.675-2.95-1.612t-.8-2.288q0-1.625 1.05-2.525t2.15-1.025V3h2v2.1q1.25.2 2.063.913t1.187 1.737l-1.85.8q-.3-.8-.85-1.2t-1.5-.4q-1.1 0-1.675.488T9.825 8.65q0 .825.75 1.3t2.6 1q1.725.5 2.613 1.588t.887 2.512q0 1.775-1.05 2.7t-2.6 1.15V21z" />
                    </svg>
                  </td>
                </tr>
                <tr>
                  <td style="padding-top: 10px; color: #8f8f8f;">Amount</td>
                </tr>
                <tr>
                  <td style="padding-top: 10px; font-weight: bold; font-size: 20px;">{{ price }} XMR</td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <!-- Details Section -->
    <tr>
      <td align="center">
        <table border="0" cellspacing="0" cellpadding="5" style="font-size: 1.1rem;">
          <tr>
            <td align="right" style="color: #8f8f8f; padding-right: 10px;">Username:</td>
            <td style="font-weight: 500;">{{ userName }}</td>
          </tr>
          <tr>
            <td align="right" style="color: #8f8f8f; padding-right: 10px;">User Id:</td>
            <td style="font-weight: 500;">{{ userId }}</td>
          </tr>
          <tr>
            <td align="right" style="color: #8f8f8f; padding-right: 10px;">Page:</td>
            <td style="font-weight: 500;">{{ slug }}</td>
          </tr>
          <tr>
            <td align="right" style="color: #8f8f8f; padding-right: 10px;">Page Id:</td>
            <td style="font-weight: 500;">{{ pageId }}</td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
{{/layout}}